<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="merk_notification.mongodb_notification" class="merk\NotificationBundle\Document\NotificationSubscriber">
            <argument type="service" id="service_container" />
            <tag name="doctrine.common.event_subscriber" connection="default" />
        </service>

        <service id="merk_notification.manager.user_preferences.default" class="merk\NotificationBundle\Document\UserPreferencesManager" public="false">
            <argument type="service" id="doctrine.odm.mongodb.default_document_manager" />
            <argument>%merk_notification.model.user_preferences.class%</argument>
            <argument type="service" id="security.context" />
        </service>

        <service id="merk_notification.mongodb_listener" class="merk\NotificationBundle\EventListener\MongoDBListener">
            <argument type="service" id="doctrine.odm.mongodb.default_document_manager" />
            <tag name="kernel.event_listener" event="merk_notification.notification_event" method="onNotification" />
        </service>
    </services>
</container>
