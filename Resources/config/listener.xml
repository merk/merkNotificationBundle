<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="user.notification.listener" class="merk\NotificationBundle\EventListener\UserNotificationListener">
            <argument type="service" id="merk_notification.user_preferences.manager" />
            <argument type="service" id="swiftmailer.mailer" />
            <argument type="service" id="templating" />
        </service>

        <service id="merk_notification.notification_listener" class="merk\NotificationBundle\EventListener\NotificationListener">
            <tag name="kernel.event_listener" event="merk_notification.notification_event" method="onNotification" />
        </service>
    </services>
</container>