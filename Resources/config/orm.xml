<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="merk_notification.entity_manager" factory-service="doctrine" factory-method="getEntityManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%merk_notification.model_manager_name%</argument>
        </service>

        <service id="merk_notification.orm_notification" class="merk\NotificationBundle\Entity\NotificationSubscriber">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <service id="merk_notification.manager.user_preferences.default" class="merk\NotificationBundle\Entity\UserPreferencesManager" public="false">
            <argument type="service" id="merk_notification.entity_manager" />
            <argument>%merk_notification.model.user_preferences.class%</argument>
            <argument type="service" id="security.context" />
        </service>
    </services>
</container>
